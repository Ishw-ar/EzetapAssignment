<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".FirstScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/task_background">


        <ImageView
            android:id="@+id/imageTitle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_baseline_person_24"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/colorHint"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:hint="Entet Name"
            android:padding="12dp"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="40dp"
            android:textColor="@color/white"
            android:textColorHint="@color/colorHint"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageTitle"
            app:layout_constraintStart_toEndOf="@id/imageTitle"
            app:layout_constraintTop_toTopOf="@id/imageTitle" />

        <View
            android:id="@+id/viewDividerTitle"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/Color_Button"
            app:layout_constraintTop_toBottomOf="@id/etTitle"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imagePassword"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_show_password_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewDividerTitle"
            app:tint="@color/colorHint" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:hint="Enter Password"
            app:passwordToggleEnabled="true"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="40dp"
            android:textColor="@color/white"
            android:textColorHint="@color/colorHint"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintBottom_toBottomOf="@id/imagePassword"
            app:layout_constraintStart_toEndOf="@id/imagePassword"
            app:layout_constraintTop_toTopOf="@id/imagePassword" />

        <View
            android:id="@+id/viewDividerPassword"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/Color_Button"
            app:layout_constraintTop_toBottomOf="@id/etPassword"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/imageEmail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_baseline_email_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imagePassword"
            app:tint="@color/colorHint" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:hint="Enter Email"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="40dp"
            android:textColor="@color/white"
            android:textColorHint="@color/colorHint"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintBottom_toBottomOf="@id/imageEmail"
            app:layout_constraintStart_toEndOf="@id/imageEmail"
            app:layout_constraintTop_toTopOf="@id/imageEmail" />

        <View
            android:id="@+id/viewDividerEmail"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/Color_Button"
            app:layout_constraintTop_toBottomOf="@id/etEmail"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/imageBirthDate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_baseline_calendar_today_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageEmail"
            app:tint="@color/colorHint" />

        <EditText
            android:id="@+id/etBirthDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:hint="Enter DOB"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="40dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="@color/white"
            android:textColorHint="@color/colorHint"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintBottom_toBottomOf="@id/imageBirthDate"
            app:layout_constraintStart_toEndOf="@id/imageBirthDate"
            app:layout_constraintTop_toTopOf="@id/imageBirthDate" />

        <View
            android:id="@+id/viewDividerDateOfBirth"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/Color_Button"
            app:layout_constraintTop_toBottomOf="@id/etBirthDate"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/btnProceed"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/button_background"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_arrow_forward_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewDividerDateOfBirth"
            app:tint="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>